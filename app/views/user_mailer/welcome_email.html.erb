  <header class="page-header">
    <h1>Thank you for your order #<%= @order.email %>. Your order has been completed #<%= @order.id %> Thank you for your order #<%= @order.email %></h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @order.line_items.each do |item| %>
          <%= render 'item', product_id: item.product_id, quantity: item.quantity %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</section>