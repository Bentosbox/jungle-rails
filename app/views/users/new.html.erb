 <h1>Signup!</h1>

<%= form_for :user, url: '/users' do |form| %>

        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_area :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_area :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.text_area :password, class: 'form-control' %>
        </div>

         <div class="form-group">
          <%= form.label :password_confirmation %>
           <%= form.text_area :password_confirmation, class: 'form-control' %>
        </div>


        <%= form.submit 'Register Now!!!', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
